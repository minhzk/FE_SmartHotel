{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "numReplicas": 1,
        "sleepApplication": false,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "environments": {
        "production": {
            "variables": {
                "NODE_ENV": "production",
                "NEXT_TELEMETRY_DISABLED": "1",
                "SKIP_TYPE_CHECK": "1",
                "CI": "false"
            }
        }
    }
}
